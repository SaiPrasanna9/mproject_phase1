FloatLayout:

    Button:
        text: "Back"
        font_size: 0.4 * self.height
        size_hint: 0.1, 0.08
        pos_hint: {"x": 0.45, "y": 0.05}
        on_release:
            app.root.current = "cog"
            root.manager.transition.direction = "right"

    Button:
        text: "Start"
        size_hint: 0.2, 0.2
        pos_hint: { "x": 0.2, "y": 0.1}
        on_release:
            app.in_session()

    Button:
        text: "Stop"
        size_hint: 0.2, 0.2
        pos_hint: { "x": 0.6, "y": 0.1}
        on_release:
            app.stop_function()